  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Mnist",
      "type": "python",
      "request": "launch",
      "program": "main.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": ["mnist", "--gpus=0"]
    },
    {
      "name": "Name",
      "type": "python",
      "request": "launch",
      "program": "main.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": ["name", "--gpus=0"]
    },
    {
      "name": "Question Answering",
      "type": "python",
      "request": "launch",
      "program": "main.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": ["transformer", "--gpus=0", "--log_level=debug"]
    },
    {
      "name": "테스트",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      // "args": ["tests/trainer/test_transformer_trainer.py"]
      "args": ["-k", "test_look_ahead_mask"]
    }
  ]
}
